<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to image_tag("logo.png", alt: "Member Management System on Rails", class:"logo-img"), root_path %>
      <%= link_to "Training Management System", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">          
          <% if signed_in? %>
          <li><%= link_to "Home", root_path %></li>
          <li id="" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Welcome, <i> <%= current_user.name %> </i> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% elsif supervisor_signed_in? %>
          <li><%= link_to "Home", admin_root_path %></li>
          <li><%= link_to "Trainees", admin_users_path %></li>
          <li><%= link_to "Courses", admin_supervisor_courses_path(current_supervisor.id) %></li>
          <li id="" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Welcome, <i> <%= current_supervisor.name %> </i> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", admin_supervisor_path(current_supervisor.id) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", admin_signout_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% else %>
          <li><%= link_to "Home", root_path %></li>
          <li id="" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Sign in <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "As Trainee", signin_path %></li>
              <li>
                <%= link_to "As Supervisor", admin_signin_path %>
              </li>
            </ul>
          </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>