<div class="user-info-wrap">
  <%= image_tag "default_user.png", alt: @user.name, class: "user-avatar" %>
  <div class="user-info">
    <div class="user-name">
      <h1><%= @user.name %></h1>
      <% if current_user? @user %>
      <%= button_to "Edit Profile", edit_user_path, method: :get,
      class: "btn btn-primary small" %>
      <% end %>
    </div>
    <div class="user-desc"> <%= @user.email %> </div>
  </div>
</div>
<div class="span7 subject-list">
  <% if @subjects.any? %>
  <h2> Subjects (<%= @subjects.count %>)</h2>
  <ul>
    <% @subjects.each do |subject| %>
    <li>
      <h3 class="subject-name"><%= link_to subject.name, user_enrollment_enrollment_subject_path(@user.id,
        subject.enrollment_id, subject.id) %></h3>
        <p> <%= get_start_date subject %>,
          <b><%= subject.enrollment_tasks.done_status.count %> /
            <%= subject.enrollment_tasks.count %></b> tasks done
          </p>
          <div class="subject-status <%= subject.status %>"><%= subject.status %>
          </div>
        </li>
        <% end %>
      </ul>
      <% end %>
    </div>
    <div class="span1">
    </div>
    <div class="span4">
      <h2>Activity log</h2>
      <% if current_user? @user %>
        <%= render "shared/all_activities" %>
        <%= will_paginate @activities %>
      <% end %>
    </div>
