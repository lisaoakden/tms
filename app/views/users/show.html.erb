<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.name %></h1>
      <h2>
        email: <%= @user.email %>
        <% if current_user? @user %>
          <%= button_to "Edit Profile", edit_user_path, method: :get, class: "btn btn-primary" %>
        <% end %>
      </h2>
    </section>
  </aside>
</div>
<div class="span8">
  <% if @enrollment_subjects.any? %>
    <h3> Subjects (<%= @enrollment_subjects.count %>)</h3>
    <ul class="activities">
      <% @enrollment_subjects.each do |enrollment_subject| %>
        <li>
          <h2><%= enrollment_subject.subject.name %></h2>
          <ul> 
            <li>Duration: <%= enrollment_subject.subject.duration.to_s + " days" %></li>
            <li>Expect start date:<%= enrollment_subject.start_date %></li>
            <li><%= enrollment_subject.enrollment_tasks.where(status: "done").count %> /
            <%= enrollment_subject.enrollment_tasks.count %> tasks done</li>
            <li>Status: <%= enrollment_subject.status %> </li>
          </ul>
        </li>
      <% end %>
    </ul>
    <% end %>
    <% if current_user? @user %>
  <% end %>
</div>