<% provide(:title, "Add new course") %>
<h1>Add a new course</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for [:admin, @supervisor, @course] do |f| %>
      <%= render "shared/course_error_messages" %>
      <%= render "basic_form", f: f %>
    	<%= render "create_form", f: f %>
    <% end %>
  </div>
</div>

<script>
	$('.subject').click(function() {
		if($(this).is(':checked')) {  
	  	$(this).parent().next('.subject-content').show();
	  }
		else {
	  	$(this).parent().next('.subject-content').hide();
	  }
});
</script>