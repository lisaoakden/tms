<fieldset>
	<legend>Select Subjects:</legend> 
  <ul>
    <%= f.fields_for :course_subjects do |builder| %>
  	<li>
  		<h3>
  			<%= builder.check_box :chosen, {class: "subject", checked: false}, true, false %>
  			<%= builder.object.subject.name unless builder.object.subject_id.blank? %>
  		</h3>
  		<div class="subject-content" style="display:none;">
  			<%= builder.hidden_field :subject_id, value: builder.object.subject_id %>
    		<%= builder.label :duration, "Subject Duration" %>
    		<%= builder.number_field :duration, value: builder.object.subject.duration,
    		  in: 1...30 %>
    		<ul>
    			<%= builder.fields_for :course_subject_tasks do |sub_builder| %>
    	    <li>
    	      <%= sub_builder.check_box :chosen, {checked: true}, true, false %>
    	      <%= sub_builder.object.task.name if sub_builder.object.task_id.present? %>
            <%= sub_builder.hidden_field :task_id, value: sub_builder.object.task_id %>
    	      <%= sub_builder.hidden_field :subject_id, value: builder.object.subject_id %>
    	    </li>
          <% end %>
    		</ul>
    	</div>
  	</li>
    <% end %>
  </ul>
</fieldset>
<div class="center">
  <%= f.submit "Create course", class: "btn btn-large btn-primary" %>
</div>