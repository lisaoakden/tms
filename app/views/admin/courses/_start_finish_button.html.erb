<% if @course.has_trainee? %>
  <%= link_to "Conclusion", admin_supervisor_course_conclusion_path(current_supervisor, @course), 
      class: "btn btn-large btn-primary" %>
  <% if @course.started? %>
    <%
      course_finish_msg = @course.all_subject_finished? ? "Finish this course?" :
        "Some of subject is not finished. Do you still want finish this course?"
    %>
    <%= link_to "Finish Course", admin_supervisor_course_path(current_supervisor, @course,
      finish: Settings.action.course.finish), method: :patch, confirm: course_finish_msg,
      class: "btn btn-large btn-primary" %>
  <% else %>
    <%= link_to "Start Course", admin_supervisor_course_path(current_supervisor, @course,
      start: Settings.action.course.start), method: :patch, confirm: "Start this course?",
      class: "btn btn-large btn-primary" %>
  <% end %>
<% end %>