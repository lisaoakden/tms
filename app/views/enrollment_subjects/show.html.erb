<h1><%= @enrollment.course.name %></h1>
<h1><%= @enrollment_subject.subject.name %></h1>
<% if current_user? @user %>
  <div class="row">
      <div class="span6 offset3">
        <%= form_for([@current_user, @enrollment, @enrollment_subject]) do |f| %>
          <%= render "shared/error_messages" %>
          <% @enrollment_subject.enrollment_tasks.each do |enrollment_tasks| %>
            <%= enrollment_tasks.task.name %>
            <% if enrollment_tasks.task_done? %>
              <%= f.check_box "enrollment_task[checkbox]", enrollment_tasks.task.id, true, disabled: true  %> finish<br/>
            <% else  %>
            <% end %>
          <% end %>
        <% end %>
      </div>
    <% end %>
  <h3>Basic information</h3>
  <ol>
    <section>Start date: <%= @enrollment_subject.start_date %></section>
    <section>Status: <%= @enrollment_subject.status %></section>
  </ol>
  <h3>Instruction </h3>
  <%= @subject.description %>
  <%= @subject.name %>
  <h3>Activity log</h3> 
    <%= link_to "Edit Profile Subject", user_enrollment_task_list_path, class: "btn btn-primary" %>
  </div>
		<br>
  	<% unless @enrollment_subject.status == "done" %>
  		<%= button_to "Finish Subject", user_enrollment_enrollment_subject_path, method: :patch, class: "btn btn-large btn-primary" %>
<% end %>