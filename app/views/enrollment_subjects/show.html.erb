<h1><%= @enrollment_subject.subject.name %></h1>
<%= render "shared/error_messages" %>
<% if current_user? @user %>
  <h2>Subject progress</h2>
  <ul class="tasks">
    <% @enrollment_subject.enrollment_tasks.each do |enrollment_tasks| %>
      <li class="<%= enrollment_tasks.status %>">
        <div class="task-name"><%= enrollment_tasks.task.name %></div>
        <div class="task-status">
          <% if enrollment_tasks.task_done? %>
          <%= f.check_box "enrollment_task[checkbox]", enrollment_tasks.task.id, true, disabled: true  %> finish<br/>
          <% end %>âœ“
        </div>
        <div class="line-linkage">
        </div>
      </li>
    <% end %>
  </ul>

  <div class="center">
    <%= link_to "Subject Report", user_enrollment_task_list_path,
    class: "btn btn-large btn-primary" %>
  </div>

  <h2>Basic information</h2>
  <p>Subject <%= get_start_date(@enrollment_subject) %></p>

  <h2>Instruction </h2>
  <p><%= @subject.description %></p>

  <h2>Activity log</h2>
  <%= render "shared/activities" %>

<% end %>