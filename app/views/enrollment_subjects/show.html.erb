<%= render "shared/error_messages" %>
<% if current_user? @user %>
  <h2>Subject progress</h2>
  <%= render "task_list" %>

  <h2>Basic information</h2>
  <p>Subject <%= get_start_date(@enrollment_subject) %></p>

  <h2>Instruction </h2>
  <p><%= @subject.description %></p>
	<% if @enrollment_subject.done? %>
    <strong>You have completed this subject</strong>
	<% else %>
		<%= button_to "Finish Subject", user_enrollment_enrollment_subject_path, 
      method: :patch, class: "btn btn-large btn-primary" %>
	<% end %>
  <h2>Activity log</h2>
  <%= render "shared/activities" %>
<% end %>